doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Calculator
    // bower:css
    // endbower
    link(rel='stylesheet', href='bower_components/bootstrap/dist/css/bootstrap.css')
    link(rel='stylesheet', href='css/app.css')
  body
    .container
      h1.text-center.text-primary Calculator
      #calc.jumbotron
        .row
          .col-xs-12
            #number.number.text-right
        .row
          .col-xs-3
            a.btn.btn-danger(href='#') AC
          .col-xs-3
            a.btn.btn-danger(href='#') CE
          .col-xs-3
            a.btn.btn-default.op(href='#') %
          .col-xs-3
            a.btn.btn-default.op(href='#') &#247;
        .row
          .col-xs-3
            a.btn.btn-default.nb(href='#') 7
          .col-xs-3
            a.btn.btn-default.nb(href='#') 8
          .col-xs-3
            a.btn.btn-default.nb(href='#') 9
          .col-xs-3
            a.btn.btn-default.op(href='#') x
        .row
          .col-xs-3
            a.btn.btn-default.nb(href='#') 4
          .col-xs-3
            a.btn.btn-default.nb(href='#') 5
          .col-xs-3
            a.btn.btn-default.nb(href='#') 6
          .col-xs-3
            a.btn.btn-default.op(href='#') -
        .row
          .col-xs-9
            .row
              .col-xs-4
                a.btn.btn-default.nb(href='#') 1
              .col-xs-4
                a.btn.btn-default.nb(href='#') 2
              .col-xs-4
                a.btn.btn-default.nb(href='#') 3
            .row
              .col-xs-4
                a.btn.btn-default.nb(href='#') 0
              .col-xs-4
                a.btn.btn-default.nb(href='#') .
              .col-xs-4
                a.btn.btn-default.equal(href='#') =
          .col-xs-3
            a.btn.btn-default.op(href='#') +
              br
              br
              br

    // bower:js
    script(src='bower_components/jquery/dist/jquery.js')
    script(src='bower_components/bootstrap/dist/js/bootstrap.js')
    // endbower
    script(src='js/app.js')
